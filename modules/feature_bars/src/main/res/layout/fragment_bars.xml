<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/item_profile_header"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:paddingBottom="56dp">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_stub_temp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bars_stub_title"
                android:textColor="?attr/colorBlack"
                android:fontFamily="@font/roboto_bold"
                android:textSize="24sp"
                android:layout_marginTop="24dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="?attr/colorGray70"
                android:text="@string/bars_stub_description"
                android:gravity="center"
                android:layout_marginTop="24dp"/>

    </LinearLayout>

</LinearLayout>